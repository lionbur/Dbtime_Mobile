                <shape>
                    <corners android:radius="8dp" />
                    <solid android:color="#2e6ca4" />
                </shape>
            </item>
            <item android:bottom="0dp" android:left="0dp">
                <shape>
                    <stroke android:width="10dp" android:color="#0c3c94" />
