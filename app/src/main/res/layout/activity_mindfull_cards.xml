<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mindful_cards_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mnubg"
    android:padding="20dp"
    tools:context=".MindfullCardsActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ganclm_boldwebfont"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="10"
            android:shadowRadius="20"
            android:text="קשיבות"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/mindful_cards_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ganclm_boldwebfont"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="10"
            android:shadowRadius="20"
            android:text="..."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:visibility="visible" />
    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mindful_card_1"
        android:name="com.example.Dbtime_Mobile.MindfulCard"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="100dp" />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mindful_card_2"
        android:name="com.example.Dbtime_Mobile.MindfulCard"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="100dp" />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mindful_card_3"
        android:name="com.example.Dbtime_Mobile.MindfulCard"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginStart="215dp"
        android:layout_marginTop="100dp" />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mindful_card_4"
        android:name="com.example.Dbtime_Mobile.MindfulCard"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="305dp" />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mindful_card_5"
        android:name="com.example.Dbtime_Mobile.MindfulCard"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="305dp" />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mindful_card_6"
        android:name="com.example.Dbtime_Mobile.MindfulCard"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginStart="215dp"
        android:layout_marginTop="305dp" />
    <Button
        android:id="@+id/mindful_cards_shuffle"
        android:text="ערבוב"
        android:layout_marginTop="400dp"
        android:layout_marginRight = "0dp"
        android:layout_marginLeft="9dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>